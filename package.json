{
  "name": "atom-ts-transpiler",
  "version": "1.2.1",
  "description": "A transpiler for Atom packages that processes code with TypeScript",
  "author": "smhxx <captaintrek@gmail.com>",
  "main": "dist/index.js",
  "keywords": [
    "atom",
    "typescript",
    "ts",
    "transpile",
    "transpiler"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/smhxx/atom-ts-transpiler.git"
  },
  "scripts": {
    "build": "tsc -p src/tsconfig.json",
    "coverage": "jest --coverage --colors",
    "lint": "tslint -p src/tsconfig.json --type-check",
    "testlint": "tslint -p spec/tsconfig.json --type-check",
    "prepublishOnly": "npm run build",
    "test": "jest --colors"
  },
  "dependencies": {},
  "peerDependencies": {
    "typescript": "^1.6.0 || ^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^21.1.2",
    "@types/node": "^8.0.31",
    "jest": "^21.2.1",
    "ts-jest": "^21.0.1",
    "tslint": "^5.7.0",
    "tslint-config-airbnb": "^5.3.0",
    "typescript": "^2.5.3"
  },
  "license": "MIT",
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "src/tsconfig.json",
        "skipBabel": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.{ts,tsx}"
    ],
    "testRegex": "(/(?:spec|test)/(?!fixtures?/)(?:.*/)*.*[.-](?:spec|test))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
