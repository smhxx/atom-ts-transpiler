{
  "name": "atom-ts-transpiler",
  "version": "1.5.1",
  "description": "A transpiler for Atom packages that processes code with TypeScript",
  "author": "smhxx <captaintrek@gmail.com>",
  "main": "dist/index.js",
  "keywords": [
    "atom",
    "typescript",
    "ts",
    "transpile",
    "transpiler"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/smhxx/atom-ts-transpiler.git"
  },
  "scripts": {
    "build": "tsc -p src/tsconfig.json",
    "coverage": "nyc mocha --opts spec/mocha.opts",
    "deploy": "semantic-release",
    "examples": "node examples/verify.js",
    "lint": "tslint -p src",
    "lintspec": "tslint -p spec",
    "prepublishOnly": "npm run build",
    "test": "mocha --opts spec/mocha.opts"
  },
  "peerDependencies": {
    "typescript": "^1.6.0 || ^2.0.0"
  },
  "devDependencies": {
    "@semantic-release/git": "4.0.1",
    "@types/chai": "4.1.2",
    "@types/chai-as-promised": "7.1.0",
    "@types/mocha": "5.0.0",
    "@types/node": "9.6.4",
    "@types/sinon": "4.3.1",
    "@types/sinon-chai": "2.7.29",
    "atom-mocha-test-runner": "1.2.0",
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "mocha": "5.0.5",
    "nyc": "11.6.0",
    "semantic-release": "15.1.6",
    "sinon": "5.0.0",
    "sinon-chai": "3.0.0",
    "ts-node": "5.0.1",
    "tslint": "5.9.1",
    "tslint-config-airbnb": "5.8.0",
    "typescript": "2.8.1"
  },
  "license": "MIT",
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "./spec/helper/setup.ts"
    ],
    "reporter": [
      "lcovonly",
      "text"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "release": {
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {
          "breaking": true,
          "release": "major"
        },
        {
          "type": "feat",
          "release": "minor"
        },
        {
          "type": "fix",
          "release": "patch"
        },
        {
          "type": "perf",
          "release": "patch"
        },
        {
          "type": "refactor",
          "release": "patch"
        },
        {
          "type": "docs",
          "scope": "README",
          "release": "patch"
        }
      ]
    },
    "verifyConditions": [
      "@semantic-release/git",
      "@semantic-release/github",
      "@semantic-release/npm"
    ],
    "prepare": [
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/github",
      "@semantic-release/npm"
    ]
  }
}
